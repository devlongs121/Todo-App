<body>
    <div class="container">
        <div class="app">
            <h2>TO DO LIST</h2>
            <form action="">
                <input type="text" placeholder="Add new task...">
                <button type="submit">&plus;</button>
            </form>
            <ul>
                <li>
                    <input type="checkbox" onclick="taskComplete(this)" class="check">
                    <input type="text" value="My task" class="task tasks" onfocus="getCurrentTask(this)"
                        onblur="editTask(this)">
                   <button onclick="removeTask(this)" class="task" id="edit"> Edit.</button> 
                   <button onclick="removeTask(this)" class="task" id="delete"> Delete</button> 
                </li>

            </ul>
        </div>
    </div>
    
    
</body>
